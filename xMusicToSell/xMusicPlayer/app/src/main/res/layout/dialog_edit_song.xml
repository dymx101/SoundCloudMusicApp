<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingLeft="@dimen/dialog_margin"
        android:paddingRight="@dimen/dialog_margin"
        android:layout_marginTop="@dimen/dialog_margin"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_subhead"
        android:textStyle="bold"
        android:text="@string/title_song"/>

    <EditText
        android:id="@+id/ed_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_edit_text"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:imeOptions="actionDone"
        android:paddingBottom="@dimen/small_margin"
        android:textColor="@color/main_color_text"
        android:paddingLeft="@dimen/dialog_margin"
        android:paddingRight="@dimen/dialog_margin"
        android:singleLine="true"
        android:textSize="@dimen/text_size_subhead"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        android:background="@color/colorAccent">

    </View>

    <TextView
        android:id="@+id/tv_title_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingLeft="@dimen/dialog_margin"
        android:paddingRight="@dimen/dialog_margin"
        android:layout_marginTop="@dimen/dialog_margin"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_subhead"
        android:textColor="@color/colorAccent"
        android:text="@string/title_artist"/>

    <EditText
        android:id="@+id/ed_artist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_edit_text"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:imeOptions="actionDone"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/dialog_margin"
        android:textColor="@color/main_color_text"
        android:paddingRight="@dimen/dialog_margin"
        android:singleLine="true"
        android:textSize="@dimen/text_size_subhead"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        android:background="@color/colorAccent">

    </View>
</LinearLayout>